<script>

  $(document).ready(function() {
    $(".bgsubmit").click(function (e) {
      var bldgrp = $("#bgsubmit").val();
      if(bldgrp.length == 0){
        $(".conf_error_bldgrp").html('Please Select Blood Group.');
      }else{
        
        var blood_group = {'blood_group': bldgrp};
        $.post({
        traditional: true,
        url: '/members/savebldgroup',
        contentType: 'application/json',
        data: JSON.stringify(blood_group),
        success: function(xhr, status, error){
          //alert(status);
          location.reload();
        },
        error: function (xhr, status, error) {
            alert('Error: ' + error.message);
        }
      });
      }
    });
  });
  
</script>

