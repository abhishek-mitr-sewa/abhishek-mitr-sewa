<%- include('layouts/header') %>
        <main class="main-content col">
          <div class="main-content-container container-fluid px-4 my-auto h-100">
            <div class="row no-gutters h-100">
              <div class="col-lg-3 col-md-5 auth-form mx-auto my-auto">
                <div class="card">
                  <div class="card-body">
                    <img class="d-table mx-auto mb-3" src="../images/mitr_sewa.svg" alt="Shards Dashboards - Register Template">
                    <h5 class="auth-form__title text-center mb-4">Access Your Account</h5>
                    <form name="frm" action="/admin/login" method="POST" >
                      <% if(status ==0){ %>
                        <div class="alert alert-danger alert-rounded text-white"> <b class="text-center">Alert</b><br>
                           <span class="text-left"><%= message %> </span> 
                        </div>
                      <%  } %>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Mobile Number</label>
                        <input type="text" name="username" class="form-control" placeholder="Enter Mobile number">
                      </div>
                      <div class="form-group">
                        <label for="">Password</label>
                        <input type="password" name="password" class="form-control" id="" placeholder="Password">
                      </div>
                      <input type="submit" class="btn col-md-8 btn-pill btn-accent d-table mx-auto" value="Login" name="login">
                    </form>
                  </div>
                </div>
                <div class="auth-form__meta d-flex mt-4">
                  <a href="/admin/resetpass">Forgot your password?</a>
                  <a class="ml-auto" href="/members/create-user">Create new account?</a>
                </div>
                
              </div>
              
            </div>
          </div>
        </main>
        
        <%- include('layouts/footer') %> 